            </div>
            <!-- grid of 4 items start end -->

            <!-- single item start -->
            <div class="col-xs-12 col-md-6 mosaic-grid-1">
                <div class="row">
                    <div class="col-xs-12">
                        {{> mosaicitemevent }}
                    </div>
                </div>
            </div>
            <!-- single item end -->
        </div>

    </div>
</div>


