<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<groupId>au.com.australia</groupId>
		<artifactId>tourismaustralia</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>tourismaustralia-ui</artifactId>
	<packaging>jar</packaging>
	<name>Tourism Australia UI</name>

	<properties>
		<maven.test.skip>true</maven.test.skip>
	</properties>

    <profiles>
        <profile>
            <id>install</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <crx.plugin.goal>install</crx.plugin.goal>
            </properties>
        </profile>
        <profile>
            <id>activate</id>
            <activation>
                <property>
                    <name>activate</name>
                </property>
            </activation>
            <properties>
                <crx.plugin.goal>activate</crx.plugin.goal>
            </properties>
        </profile>
    </profiles>

	<build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.cognifide.maven.plugins</groupId>
                    <artifactId>maven-crx-plugin</artifactId>
                    <version>1.0.3</version>
                    <configuration>
                        <url>http://${cq.host.author}:${cq.port.author}</url>
                        <user>${cq.username}</user>
                        <password>${cq.password}</password>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<encoding>utf-8</encoding>
				</configuration>
			</plugin>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <skipIfEmpty>true</skipIfEmpty>
                </configuration>
            </plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<appendAssemblyId>false</appendAssemblyId>
					<descriptors>
						<descriptor>src/main/assembly/zip.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
            <plugin>
                <groupId>com.cognifide.maven.plugins</groupId>
                <artifactId>maven-crx-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>${crx.plugin.goal}</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.citytechinc.maven.plugins</groupId>
                <artifactId>osgi-bundle-status-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>status-author</id>
                        <goals>
                            <goal>status</goal>
                        </goals>
                        <configuration>
                            <bundleNames>
                                <bundleName>${core.name}</bundleName>
                            </bundleNames>
                            <host>${cq.host.author}</host>
                            <port>${cq.port.author}</port>
                            <username>${cq.username}</username>
                            <password>${cq.password}</password>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>${core.name}</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
</project>
